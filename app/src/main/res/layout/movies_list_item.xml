<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/movie_list_item_title"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_alignParentLeft="true"
        android:text="Movie Title"/>

    <TextView
        android:id="@+id/movie_list_item_year"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/movie_list_item_title"
        android:text="(Year)"/>

    <TextView
        android:id="@+id/movie_list_item_saved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_below="@id/movie_list_item_title"
        android:layout_alignParentLeft="true"
        android:alpha="0.6"
        android:text="saved"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:alpha="0.5"
        android:src="@drawable/next_white_theme"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/movie_list_item_saved"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:alpha="0.3"
        android:background="@color/black_separator_item_list"/>

</RelativeLayout>