<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/movie_list_poster_item_image"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/movie_list_poster_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Movie Title"
        android:textSize="14dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/movie_list_poster_item_image" />


    <TextView
        android:id="@+id/movie_list_poster_item_year"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/movie_list_poster_item_title"
        android:textSize="14dp"
        android:text="(Year)"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/movie_list_item_saved"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:alpha="0.3"
        android:background="@color/black_separator_item_list"
        android:visibility="gone"/>

</RelativeLayout>